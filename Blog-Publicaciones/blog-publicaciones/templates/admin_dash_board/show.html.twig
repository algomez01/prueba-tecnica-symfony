{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<body style="background-color:#B0BBF7;" >
<div class="example-wrapper">
    <center>
    <h1><b>Hola Admin Master</b></h1>
    <h1>Usuario</h1>
    <center>
    <div class="container p-3 my-3 border" style="background-color:#E8E3F9;">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nombres</th>
                <td>{{ user.nombres }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ user.apellidos }}</td>
            </tr>
            <tr>
                <th>Fecha de creacion</th>
                <td>{{ user.feCreacion ? user.feCreacion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Tipo de Usuario</th>
                <td>{{ user.tipousuario }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_dash_board_index') }}"class="btn btn-info" role="button">Regresar</a>

    <a href="{{ path('app_admin_dash_board_edit', {'id': user.id}) }}"class="btn btn-primary" role="button">Editar</a>

    {{ include('admin_dash_board/_delete_form.html.twig') }}
{% endblock %}
