{% extends 'base.html.twig' %}

{% block title %}Citas pendientes{% endblock %}

{% block body %}
    <h1>Citas Pendientes</h1>

<!--No se permite editar las citas ya atendidas por el mÃ©dico-->
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fe_creacion</th>
                <th>Motivo</th>
                <th>Estado</th>
                <th>Paciente</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for cita in citas %}
            <tr>
                <td>{{ cita.id }}</td>
                <td>{{ cita.fe_creacion ? cita.fe_creacion|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cita.motivo }}</td>
                <td>{{ cita.estado }}</td>
                <td>{{ cita.paciente_apellidos }} {{cita.paciente_nombres}}</td>
                <td>
                  <a href="{{path('app_medico_dashboard_edit',{'id':cita.id})}}">Atender</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No se encontraron datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_medico_dashboard_index') }}">Regresar</a>
{% endblock %}
