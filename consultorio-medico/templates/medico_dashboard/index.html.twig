{% extends 'base.html.twig' %}

{% block title %}Citas atendidas{% endblock %}

{% block body %}
    <h1>Historial de Citas Atendidas</h1>

<!--No se permite editar las citas ya atendidas por el mÃ©dico-->
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fe_creacion</th>
                <th>Motivo</th>
                <th>Estado</th>
                <th>Tipo Cita</th>
                <th>Paciente</th>
            </tr>
        </thead>
        <tbody>
        {% for cita in citas %}
            <tr>
                <td>{{ cita.id }}</td>
                <td>{{ cita.fe_creacion ? cita.fe_creacion|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cita.motivo }}</td>
                <td>{{ cita.estado }}</td>
                <td>{{ cita.descripcionTipoCita }}</td>
                <td>{{ cita.paci_apellidos }} {{cita.paci_nombres}}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_medico_dashboard_pendientes') }}">Atender citas</a>
{% endblock %}
