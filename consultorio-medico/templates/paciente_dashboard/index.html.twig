{% extends 'base.html.twig' %}

{% block title %}Citas Paciente{% endblock %}

{% block body %}
    <h1>Historial de Citas Pacientes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fe_creacion</th>
                <th>Motivo</th>
                <th>Estado</th>
                <th>Tipo Cita</th>
                <th>Medico</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for cita in citas %}
            <tr>
                <td>{{ cita.id }}</td>
                <td>{{ cita.fe_creacion ? cita.fe_creacion|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cita.motivo }}</td>
                <td>{{ cita.estado }}</td>
                <td>{{ cita.descripcionTipoCita }}</td>
                <td>{{ cita.apellido_medico }} {{ cita.nombre_medico }}</td>
                <td>
                    {% if cita.estado == 'Pendiente' %} <!--Solo si esta pendiente se puede editar el motivo -->
                    <a href="{{ path('app_paciente_dashboard_edit', {'id': cita.id}) }}">Editar</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No se encontraron datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_paciente_dashboard_new') }}">Generar Cita</a>
{% endblock %}
