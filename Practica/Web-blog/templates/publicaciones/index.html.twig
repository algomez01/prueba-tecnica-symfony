{% extends 'base.html.twig' %}

{% block title %}Publicaciones index{% endblock %}

{% block body %}
    <h1>Publicaciones index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Cuerpo</th>
                <th>Estado</th>
                <th>User_id</th>
                <th>Categoria_id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicacione in publicaciones %}
            <tr>
                <td>{{ publicacione.id }}</td>
                <td>{{ publicacione.titulo }}</td>
                <td>{{ publicacione.cuerpo }}</td>
                <td>{{ publicacione.estado }}</td>
                <td>{{ publicacione.userId }}</td>
                <td>{{ publicacione.categoriaId }}</td>
                <td>
                    <a href="{{ path('app_publicaciones_show', {'id': publicacione.id}) }}", class="btn btn-danger" role="button">show</a>
                    <a href="{{ path('app_publicaciones_edit', {'id': publicacione.id}) }}", class="btn btn-danger" role="button">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_publicaciones_new') }}", class="btn btn-danger" role="button">Crear Nueva publicaci√≥n</a>
{% endblock %}
