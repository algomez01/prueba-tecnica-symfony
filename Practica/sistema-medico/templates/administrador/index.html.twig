{% extends 'base.html.twig' %}

{% block title %}Adminstrador{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<br>
<center>
<body style="background-color: rgb(254 226 226);" >
<div class="container-xxl bg-ligth">
    <h1 id="myheading"
    style="border-bottom:2px solid orangered;padding-bottom:5px;">Supervisor</h1>
    {% if ListUser and ListUser|length > 0%}
    </div>
    </center>
    <center>
<div class="container bg-secondary">
    <table class="table">
       <thead class="thead-dark">
         <tr>
             <th>Id</th>
             <th>Nombres</th>
             
             <th>Email</th>
             <th>Tipo de Usuario</th>
         </tr>
       </thead>
       <tbody>
        {% for user in ListUser %}
             <tr scope ="row">
                 <td>{{user.id}}</td>
                 <td>{{user.Nombres}}</td>
                 <td>{{user.email}}</td>
                 <td>{{user.TipoUsuario}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    </center>
   {% else %}
    <center>
        <p><strong><br>No existen Usuarios Registrados</br></strong></p>
    </center>
   {% endif %}
    <center>
   <a href = "{{path('app_registration_user')}}" class="btn btn-primary" role="button">Agregar</a>
   <a href = "{{path('app_logout')}}" class="btn btn-danger" role="button">Cerrar Sesion</a>
    </center>
</div>
</body>
{% endblock %}


