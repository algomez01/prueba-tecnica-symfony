{% extends 'base.html.twig' %}

{% block title %}Admins✅{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<br>
<center>
<body style="background-color:#F7F3F9;" >
<div class="container-xxl bg-ligth">
    <h1>Hello Admins✅</h1>
    {% if listUsers and listUsers|length > 0%}
    </div>
    </center>
    <center>
<div class="container bg-secondary">
    <table class="table table-secondary">
       <thead>
         <tr>
             <th>ID:</th>
             <th>NOMBRES:</th>
             <th>APELLIDOS:</th>
             <th>EMAIL:</th>
             <th>TIPO DE USUARIO:</th>
         </tr>
       </thead>
       <tbody>
        {% for user in listUsers %}
             <tr scope ="row">
                 <td>{{user.id}}</td>
                 <td>{{user.nombres}}</td>
                 <td>{{user.apellidos}}</td>
                 <td>{{user.email}}</td>
                 <td>{{user.tipo}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    </center>
   {% else %}
    <center>
        <p><strong><br>No existen Usuarios Registrados</br></strong></p>
    </center>
   {% endif %}
    <center>
   <a href = "{{path('app_registration_user')}}" class="btn btn-primary" role="button">Agregar</a>
   <a href = "{{path('app_logout')}}" class="btn btn-danger" role="button">Cerrar Sesion</a>
    </center>
</div>
</body>
{% endblock %}

