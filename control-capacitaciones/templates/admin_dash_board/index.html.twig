{% extends 'base.html.twig' %}

{% block title %}Admins✅{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


    <h1>Hello Admins✅</h1>
    {% if listUsers and listUsers|length > 0%}
    <center>
<div class="container">
    <table>
       <thead>
         <tr>
             <th>ID:</th>
             <th>NOMBRE:</th>
             <th>APELLIDO:</th>
             <th>EMAIL:</th>
             <th>TIPO DE USUARIO:</th>
         </tr>
       </thead>
       <tbody>
        {% for user in listUsers %}
             <tr scope ="row">
                 <td>{{user.id}}</td>
                 <td>{{user.nombre}}</td>
                 <td>{{user.apellido}}</td>
                 <td>{{user.email}}</td>
                 <td>{{user.tipo}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </center>
   {% else %}
    <center>
        <p><strong>No existen Usuarios Registrados</strong></p>
    </center>
   {% endif %}
    <center>
   <a href = "{{path('app_registration_user')}}" class="btn btn-primary" role="button">Agregar</a>
   <a href = "{{path('app_logout')}}" class="btn btn-secondary" role="button">Cerrar Sesion</a>
    </center>
</div>
{% endblock %}

