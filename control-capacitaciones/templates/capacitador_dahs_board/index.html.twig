{% extends 'base.html.twig' %}

{% block title %}Capacitador!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



    <h1>HOLA CAPACITADORESâœ…</h1>
    {% if listCapacitacione and listCapacitacione|length > 0%}
    <center>
<div class="container">
    <table>
       <thead>
         <tr>
             <th>ID:</th>
             <th>TITULO:</th>
             <th>DESCRIPCION:</th>
             <th>ESTADO:</th>
             <th>OPCIONES:</th>
         </tr>
       </thead>
       <tbody>
        {% for capacitaciones in listCapacitacione %}
             <tr scope ="row">
                 <td>{{capacitaciones.id}}</td>
                 <td>{{capacitaciones.titulo}}</td>
                 <td>{{capacitaciones.descripcion}}</td>
                 <td>{{capacitaciones.estado}}</td>
                 <td>{{capacitaciones.user_id}}</td>
                  <a href = "{{path('app_capacitador_dahs_board_add',{'id': capacitaciones_id})}}" class="btn btn-primary" role="button">Editar</a>
                  <a href = "{{path('app_capacitador_dahs_board_delete',{'id': capacitaciones_id})}}" class="btn btn-danger" role="button">Eliminar</a>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </center>
   {% else %}
    <center>
        <p><strong>No existen Cursos Registrados</strong></p>
    </center>
   {% endif %}
    <center>
   <a href = "{{path('app_capacitador_dahs_board_register')}}" class="btn btn-primary" role="button">Agregar Cursos</a>
   <a href = "{{path('app_logout')}}" class="btn btn-secondary" role="button">Cerrar Sesion</a>
    </center>
</div>
{% endblock %}

