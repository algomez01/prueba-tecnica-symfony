{% extends 'base.html.twig' %}

{% block title %}Facturas index{% endblock %}

{% block body %}
 <body style="background-color:#C8C5CA;" >
       <h1>Hola Facturador ðŸ¤‘</h1>
<center>
    <h1>Facturas index</h1>
</center>
     <center>
    <div class="container bn-secondary">
    <table class="table table-success table-striped">
        <thead>
            <tr>
                <th>Numero de Factura</th>
                <th>Identificador de Cita</th>
                <th>Valor</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for factura in facturas %}
            <tr>
                <td>{{ factura.id }}</td>
                <td>{{ factura.citaId }}</td>
                <td>{{ factura.valor }}</td>
                <td>{{ factura.fecha ? factura.fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ factura.hora ? factura.hora|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_facturacion_show', {'id': factura.id}) }}"class="btn btn-success" role="button">Ver</a>
                    <a href="{{ path('app_facturacion_edit', {'id': factura.id}) }}"class="btn btn-primary" role="button">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No existen facturas generadas</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_facturacion_new') }}"class="btn btn-success" role="button">Crear facturas</a>
    <a href = "{{path('app_logout')}}" class="btn btn-danger" role="button">Cerrar Sesion</a>
{% endblock %}
