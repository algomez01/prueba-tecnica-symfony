{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nombres</th>
                <td>{{ user.nombres }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ user.apellidos }}</td>
            </tr>
            <tr>
                <th>TipoUsuario</th>
                <td>{{ user.tipoUsuario }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-lg btn-primary" href="{{ path('app_register_user_index') }}">Regresar</a>

    <a class="btn btn-lg btn-primary" href="{{ path('app_register_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('register_user/_delete_form.html.twig') }}
{% endblock %}
