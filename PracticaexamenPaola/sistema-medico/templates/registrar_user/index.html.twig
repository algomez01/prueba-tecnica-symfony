{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 id="myheading"
    style="border-bottom:2px solid orangered;padding-bottom:5px;">Usuario</h1>

    <table class="table">
        <thead>
            <tr  bgcolor="FD8E77">
                <th>Id</th>
                <th>Email</th>
                 <th>Password</th>
                <th>Roles</th>
               
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Tipo Usuario</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nombres }}</td>
                <td>{{ user.apellidos }}</td>
                <td>{{ user.tipoUsuario }}</td>
                <td>
                    <a href="{{ path('app_register_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_register_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No se encontraron datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-lg btn-primary" href="{{ path('app_register_user_new') }}">Crear nuevo</a>
{% endblock %}
